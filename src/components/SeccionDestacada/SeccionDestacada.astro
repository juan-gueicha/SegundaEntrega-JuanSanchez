---
interface Props {
    bgImage: string;
    title: string;
    description?: string;
    buttonLink?: string;
    buttonText?: string;
    contentPosition?: 'start' | 'center';
    minHeight?: string;
}

const {
    bgImage,
    title,
    description,
    buttonLink,
    buttonText,
    contentPosition = 'center',
    minHeight = 'h-[80vh]'
} = Astro.props;
---
<section
        class:list={[
            "relative bg-cover bg-center",
            minHeight
  ]}
        style=`background-image: url('${bgImage}')`
>
    <div class="absolute inset-0 bg-black/40"></div>

    <div
            class:list={[
                "relative z-10 flex h-full",
                {
                    "justify-start items-center pl-16": contentPosition === 'start',
                    "justify-center items-center text-center": contentPosition === 'center'
                }
            ]}
    >
        <div class="max-w-md text-white">
            <h2 class="text-3xl font-bold">{title}</h2>

            {description && (
                    <p class="mt-4">{description}</p>
            )}

            {buttonLink && buttonText && (
                    <a href={buttonLink} class="mt-6 inline-block">
                        <button class="px-6 py-2 border border-white rounded hover:bg-white hover:text-black transition">
                            {buttonText}
                        </button>
                    </a>
            )}
        </div>
    </div>
</section>