---
interface Props {
    title: string;
    description: string;
    price: string;
    orderLink: string;
}
const { title, description, price, orderLink } = Astro.props;
---
<div class="bg-gray-900 p-6 rounded-lg">
    <h4 class="font-semibold text-xl mb-2">{title}</h4>
    <p class="text-gray-400 mb-4">{description}</p>
    <span class="block text-2xl font-bold mb-4">{price}</span>
    <a href={orderLink}>
        <button class="bg-white text-black px-4 py-2 rounded-lg font-semibold hover:bg-gray-200">
            Seleccionar
        </button>
    </a>
</div>