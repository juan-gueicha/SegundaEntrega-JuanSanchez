---
interface Props {
    title: string,
    description: string,
    orderLink: string,
    infoLink: string,
}

const { title, description, orderLink, infoLink } = Astro.props;
---


<div class="flex flex-col bg-black/40 border border-gray-700 rounded-xl p-6 w-80 text-left backdrop-blur-sm">
   <h3 class="font-bold tracking-widest text-sm mb-2">{title}</h3>
    <p class="text-sm text-gray-300 flex-grow" set:html={description} />
    <div class="mt-auto pt-4 space-y-3">
        <a href={orderLink} class="block w-full text-center py-2.5 bg-white text-black font-bold rounded-md hover:bg-gray-200 transition-colors">Pedir Ahora</a>
        <a href={infoLink} class="block w-full text-center py-2.5 border border-gray-500 text-white font-bold rounded-md hover:bg-white/10 transition-colors">Más Información</a>
    </div>

</div>