---
interface Props {
    title: string;
    description: string;
    price: string;
    features: string;
}
const { title, description, price, features } = Astro.props;
---
<div class="flex flex-col text-left border border-gray-700 rounded-lg p-8 max-w-sm mx-auto md:mx-0 backdrop-blur-sm bg-black/30">
    <h3 class="text-2xl font-bold mb-2">{title}</h3>
    <p class="text-gray-400 mb-8">{description}</p>

    <div class="flex items-baseline mb-8">
        <span class="text-5xl font-bold">{price}</span>
        <span class="text-xl text-gray-400 ml-2">/MES</span>
    </div>

    <p class="text-xs text-gray-500 mt-auto" set:html={features} />
</div>